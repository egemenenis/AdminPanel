@model IEnumerable<AdminPanelProject.Models.Product>

@{
    ViewData["Title"] = "Anasayfa";
}

<head>
    <link rel="stylesheet" href="~/css/HomeIndex.css" asp-append-version="true" />
</head>

<h2>@ViewData["Title"]</h2>

<h3>Ürünler</h3>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="product-card">
                <img src="@item.ImagePath" class="card-img-top" alt="Ürün Görseli">
                <div class="product-card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <hr />
                    <div class="product-description">
                        <p class="card-text">@item.Description</p>
                    </div>
                    <hr />
                    <p class="card-text"><strong>Fiyat:</strong> @item.Price TL</p>
                </div>
            </div>
        </div>
    }
</div>
