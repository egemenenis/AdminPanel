@model UpdateProfileViewModel

@{
    ViewData["Title"] = "Profil Güncelleme";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="UpdateProfile" class="form-horizontal">
    <div class="form-group">
        <label for="Username">Kullanıcı Adı</label>
        <input type="text" id="Username" name="Username" class="form-control" value="@Model.Username" required />
    </div>

    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Telefon Numarası</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
    </div>

    <div class="form-group">
        <label for="CurrentPassword">Mevcut Şifre</label>
        <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label for="NewPassword">Yeni Şifre</label>
        <input type="password" id="NewPassword" name="NewPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Yeni Şifreyi Onayla</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-2">
        @TempData["Message"]
    </div>
}
