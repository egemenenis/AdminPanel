@model IEnumerable<AdminPanelProject.Models.Product>

@{
    ViewData["Title"] = "Anasayfa";
}

<h2>@ViewData["Title"]</h2>

<h3>Ürünler</h3>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
